<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @player.first.name %>
</p>

<p>
  <%= image_tag @player.first.image_url %>
</p>

<p>
  <%= "in #{pluralize(@player.first.squads.count, "team")}" %>
  <% @player.first.squads.each do |squad| %>
    <p>
      <%= link_to squad.name, squad_path(squad) %>
      <%= @teams.select {|x| x.squad_id == squad.id}.first.position_string %>
    </p>
  <% end %>
  
</p>

<%= link_to 'Edit', edit_player_path(@player) %> |
<%= link_to 'Back', players_path %>
